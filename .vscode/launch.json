    {
        "version": "0.2.0",
        "configurations": [
            {
                "command": "npm start",
                "name": "Run npm start",
                "request": "launch",
                "type": "node-terminal"
            },
            {
                "type": "firefox",
                "request": "launch",
                "reAttach": true,
                "name": "Launch localhost",
                "url": "http://localhost/index.html",
                "webRoot": "${workspaceFolder}"
            },
            {
                "name": "Launch index.html",
                "type": "firefox",
                "request": "launch",
                "reAttach": true,
                "file": "${workspaceFolder}/index.html"
            }
        ]
    }